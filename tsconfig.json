{
  "compilerOptions": {
     "target": "es2018",
     "module": "esnext",
     "lib": [
       "esnext",
       "dom"
     ],
     "esModuleInterop": true,
     "moduleResolution": "node",
     "declaration": false,
     "skipLibCheck": true,
     "resolveJsonModule": true,
     "allowSyntheticDefaultImports": true,
     "types": [
       "node",
       "jest",
       "@nuxt/types"
     ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
 }